{
  "manifest_version": 3,
  "name": "GeetCode",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*",
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "public/Dieppe.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/*",
        "*://*.leetcode.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["*://leetcode.com/*", "*://*.leetcode.com/*"]
    }
  ]
}
